            <VerticalStackLayout Padding="10" BackgroundColor="White">
                <!--  Header with Back and Search Icons  -->
                <HorizontalStackLayout
                    Margin="0,0,0,10"
                    Spacing="10"
                    VerticalOptions="Center">
                    <ImageButton
                        BackgroundColor="Transparent"
                        HeightRequest="30"
                        Source="back_icon.png"
                        WidthRequest="15" />
                    <Frame
                        Padding="0"
                        BorderColor="Gray"
                        CornerRadius="15"
                        VerticalOptions="Center">
                        <Entry
                            Margin="10,0"
                            HeightRequest="35"
                            Placeholder=""
                            WidthRequest="250" />
                    </Frame>

                    <ImageButton
                        BackgroundColor="Transparent"
                        HeightRequest="30"
                        Source="search_icon.png"
                        WidthRequest="15" />
                </HorizontalStackLayout>

                <!--  Profile Image and Group Photo  -->
                <Grid>
                    <Image
                        Aspect="AspectFill"
                        HeightRequest="180"
                        Source="{Binding UserMe.cover_image.linkImage, FallbackValue='https://png.pngtree.com/background/20220825/original/pngtree-white-and-blue-background-picture-image_1916345.jpg', TargetNullValue='https://png.pngtree.com/background/20220825/original/pngtree-white-and-blue-background-picture-image_1916345.jpg'}" />

                    <Frame
                        Margin="10"
                        Padding="0"
                        BackgroundColor="White"
                        CornerRadius="50"
                        HeightRequest="100"
                        HorizontalOptions="Start"
                        VerticalOptions="End"
                        WidthRequest="100">
                        <Image
                            Aspect="AspectFill"
                            HorizontalOptions="FillAndExpand"
                            Source="{Binding UserMe.avatar_image.linkImage, FallbackValue='https://cdn4.iconfinder.com/data/icons/iconsimple-logotypes/512/vimeo-512.png', TargetNullValue='https://cdn4.iconfinder.com/data/icons/iconsimple-logotypes/512/vimeo-512.png'}"
                            VerticalOptions="FillAndExpand" />
                    </Frame>
                </Grid>

                <!--  Name and Mutual Friends  -->
                <Label
                    Margin="10,5,0,0"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="{Binding UserMe.FullName}" />
                <Label Margin="10,0,0,10" FontSize="14">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span FontAttributes="Bold" Text="25" />
                            <Span Text=" bạn chung" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!--  Buttons  -->

                <HorizontalStackLayout
                    Padding="0,0,0,5"
                    HorizontalOptions="Start"
                    Spacing="10" />

                <HorizontalStackLayout HorizontalOptions="Start" Spacing="5">
                    <Button
                        BackgroundColor="LightGray"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        Text="Bạn bè"
                        TextColor="Black"
                        WidthRequest="120">
                        <Button.ImageSource>
                            <FileImageSource File="friend_icon.png" />
                        </Button.ImageSource>
                    </Button>
                    <Button
                        BackgroundColor="#0084FF"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        Text="Nhắn tin"
                        Clicked="OnMessageButtonClicked"
                        WidthRequest="200">
                        <Button.ImageSource>
                            <FileImageSource File="messenger_icon.png" />
                        </Button.ImageSource>
                    </Button>
                    <Button
                        BackgroundColor="LightGray"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        HeightRequest="40"
                        TextColor="Black"
                        WidthRequest="45">
                        <Button.ImageSource>
                            <FileImageSource File="option_icon.png" />
                        </Button.ImageSource>
                    </Button>


                </HorizontalStackLayout>

