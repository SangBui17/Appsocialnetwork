                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <HorizontalStackLayout HorizontalOptions="Center">
                    <VerticalStackLayout Padding="10">
                        <!--  CollectionView for Friends  -->
                        <CollectionView
                            HorizontalOptions="Start"
                            ItemsSource="{Binding Friends}"
                            SelectionChanged="OnSelectionUserIdChanged"
                            SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <!--  Grid layout for items  -->
                                <GridItemsLayout Orientation="Vertical" Span="3" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Margin="10" Orientation="Vertical">
                                        <Grid HeightRequest="100" WidthRequest="100">
                                            <Image Aspect="AspectFill" Source="{Binding user_info.avatar_image.linkImage, FallbackValue='https://cdn4.iconfinder.com/data/icons/iconsimple-logotypes/512/vimeo-512.png', TargetNullValue='https://cdn4.iconfinder.com/data/icons/iconsimple-logotypes/512/vimeo-512.png'}" />
                                        </Grid>
                                        <Label
