            <!--  Post Section  -->
            <StackLayout Spacing="20">

                <!--  Post Example  -->
                <CollectionView ItemsSource="{Binding PostList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="5,5,5,0"
                                Padding="0"
                                CornerRadius="10"
                                HasShadow="True">
                                <StackLayout>

                                    <!--  Post Header  -->
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            HeightRequest="40"
                                            Source="{Binding authorResponse.avatar.linkImage, TargetNullValue='default_image.png'}"
                                            VerticalOptions="Center"
                                            WidthRequest="40" />
                                        <StackLayout Grid.Column="1" VerticalOptions="Start">
                                            <Label FontAttributes="Bold" Text="{Binding authorResponse.fullName}" />
                                            <Label
                                                FontSize="10"
                                                Text="4h ago"
                                                TextColor="Gray" />
                                        </StackLayout>

                                        <!--  More Options  -->
                                        <Image
                                            Grid.Column="2"
                                            HeightRequest="20"
                                            Source="option_icon.png"
                                            VerticalOptions="Start"
                                            WidthRequest="20" />
                                    </Grid>

                                    <!--  Post Content  -->
                                    <Label
                                        Margin="10,0,0,10"
                                        FontSize="14"
                                        Text="{Binding content}" />

                                    <!--  Post Images  -->
                                    <ScrollView>
                                        <CollectionView ItemsSource="{Binding images}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Image
                                                        Aspect="AspectFit"
                                                        HeightRequest="200"
                                                        Source="{Binding linkImage}" />
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </ScrollView>
                                    <!--  Like, Comment, Share Counts  -->
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Likes  -->
                                        <StackLayout
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            Orientation="Horizontal"
                                            VerticalOptions="Center">
                                            <Image
                                                HeightRequest="20"
                                                Source="like_icon1.png"
                                                WidthRequest="20" />
                                            <Label
                                                FontSize="12"
                                                Text="  "
                                                TextColor="Gray"
                                                VerticalOptions="Center" />
                                            <Label
                                                FontSize="12"
                                                Text="{Binding likeCount}"
                                                TextColor="Gray"
                                                VerticalOptions="Center" />
                                        </StackLayout>

                                        <!--  Comments and Shares  -->
                                        <StackLayout
                                            Grid.Column="1"
                                            HorizontalOptions="Center"
                                            Orientation="Horizontal"
                                            VerticalOptions="Center">
                                            <Label
                                                FontSize="12"
                                                Text="{Binding commentCount}"
                                                TextColor="Gray"
                                                VerticalOptions="Center" />
                                            <Label
                                                FontSize="12"
                                                Text="  comment"
                                                TextColor="Gray"
                                                VerticalOptions="Center" />
                                            <StackLayout.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:ProfileViewModel}}, Path=CommentTappedCommand}" CommandParameter="{Binding id}" />
                                            </StackLayout.GestureRecognizers>
                                        </StackLayout>

                                        <StackLayout
                                            Grid.Column="2"
                                            HorizontalOptions="End"
                                            Orientation="Horizontal"
                                            VerticalOptions="Center">
                                            <Label
                                                FontSize="12"
                                                Text="{Binding shareCount}"
                                                TextColor="Gray"
                                                VerticalOptions="Center" />
                                            <Label
                                                FontSize="12"
                                                Text="  lượt chia sẻ"
                                                TextColor="Gray"
                                                VerticalOptions="Center" />
                                        </StackLayout>

                                    </Grid>

                                    <!--  Post Footer (Like, Comment, Share)  -->
                                    <Grid Padding="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackLayout Grid.Column="0" HorizontalOptions="Center">
                                            <Image HeightRequest="20" WidthRequest="20">
                                                <Image.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding liked}"
                                                        TargetType="Image"
                                                        Value="True">
                                                        <Setter Property="Source" Value="like_icon1.png" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding liked}"
                                                        TargetType="Image"
                                                        Value="False">
                                                        <Setter Property="Source" Value="like_icon.png" />
                                                    </DataTrigger>
                                                </Image.Triggers>
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:ProfileViewModel}}, Path=SendLikeCommand}" CommandParameter="{Binding id}" />
                                                </Image.GestureRecognizers>
                                            </Image>
                                        </StackLayout>


                                        <StackLayout Grid.Column="1" HorizontalOptions="Center">
                                            <Image
                                                HeightRequest="20"
                                                Source="comment_icon.png"
                                                WidthRequest="20">
                                                <!--  Thêm sự kiện khi nhấn vào comment  -->
                                                <Image.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:ProfileViewModel}}, Path=CommentTappedCommand}" CommandParameter="{Binding id}" />
                                                </Image.GestureRecognizers>
                                            </Image>
                                        </StackLayout>

                                        <StackLayout Grid.Column="2" HorizontalOptions="Center">
                                            <Image
                                                HeightRequest="20"
                                                Source="share_icon.png"
                                                WidthRequest="20" />
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>


        </VerticalStackLayout>
    </ScrollView>
